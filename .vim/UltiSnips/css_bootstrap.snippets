snippet bt-scrollspy "Scrollspy"
body {
	position: relative;
}
endsnippet

snippet bt-sticky-footer "Sticky Footer"
html {
	position: relative;
	min-height: 100%;
}

body {
	${1:/* Margin bottom by footer height */}
	margin-bottom: ${2:60}px;
}

.footer {
	position: absolute;
	bottom: 0;
	width: 100%;
	${3:/* Set the fixed height of the footer here */}
	height: $2px;
	line-height: $2px; /* Vertically center the text there */
	background-color: #${3:f5f5f5};
}
endsnippet
